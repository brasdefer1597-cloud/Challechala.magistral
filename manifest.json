{
  "manifest_version": 3,
  "name": "Insightify Chalamandra",
  "version": "1.0.0",
  "description": "Transform information overload into clarity",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insightify - Multimodal AI"
  },
  
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
